.buyercard{
  white:100%;
  height: 700rpx;
  border: 1px solid red;
}
.buyercard .images{
  white:100%;
  height: 500rpx;
  border: 1px solid pink;
  box-sizing: border-box;
}
.buyercard .images image{
  width:100%;
  height: 100%;
}
.buyercard .content{
   width:100%;
   height:200rpx;
   border: 1px solid green;
   box-sizing: border-box; 
}
.buyercard .content view:nth-child(1){
   width:100%;
   height:100rpx;
   color: red;
   display: table-cell;
   vertical-align: middle;
   text-indent: 20px; 
   border: 1px solid green;
}
.buyercard .content view:nth-child(2){
   width:100%;
   height:100rpx;
   color: yellow;
   vertical-align: middle; 
   text-indent: 20px;
   border: 1px solid green;
}


